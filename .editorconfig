root = true

[*]
end_of_line = crlf
[*.*]
end_of_line = crlf

[*.cs]
indent_size = 4
indent_style = tab
end_of_line = crlf
insert_final_newline = true

[*.csproj]
indent_size = 2
indent_style = space
end_of_line = crlf
insert_final_newline = true

[*.json]
indent_style = space
indent_size = 2
end_of_line = crlf
insert_final_newline = true

[*.sln]
indent_size = 4
indent_style = tab
end_of_line = crlf
#insert_final_newline = true

[*.sh]
indent_size = 4
indent_style = tab
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
csharp_style_namespace_declarations = file_scoped:warning
